<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ajoysarkar.careerguide.MainActivity"
    android:padding="0dp">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <ImageView
                android:id="@+id/ImageView3_Left"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical|center_horizontal"
                ></ImageView>
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/university"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:onClick="bestUniversity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Best University"
            android:id="@+id/textView9"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/careertips"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="tips"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Career Tips"
            android:id="@+id/textView13"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:typeface="serif"
            android:textStyle="bold|italic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CV Sample"
            android:id="@+id/textView15"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="25dp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="About Us"
            android:id="@+id/textView16"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Discussion"
            android:id="@+id/textView18"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contact Us"
            android:id="@+id/textView17"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="40dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/cv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:onClick="cv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Career Video"
            android:id="@+id/textView14"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnLogout"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/contactus"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="contact"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:id="@+id/imageView7"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/careervideo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="video"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView14"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/discussion"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="discussion"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView10"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/about"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:onClick="aboutUs"/>
        <!--<ImageView-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"-->
            <!--app:srcCompat="@drawable/careervideo"-->
            <!--android:id="@+id/imageView6"-->
            <!--android:layout_marginLeft="-350dp"-->
            <!--android:layout_marginTop="15dp"/>-->


    </GridLayout>
    </ScrollView>

</RelativeLayout>
