<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ajoysarkar.careerguide.eeeTip">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
   >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="215dp"
                app:srcCompat="@drawable/eeemain"
                android:id="@+id/imageView22"
                android:layout_marginTop="-40dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="83dp"
                android:text="ই ই ই"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="eeeinfo" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="ইইই এর কিছু প্রয়োগ ক্ষেত্র "
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="whyeee"
                android:nestedScrollingEnabled="false" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="ইইই এর সাবডিসিপ্লিন "
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="eeefield"
                android:nestedScrollingEnabled="false" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
