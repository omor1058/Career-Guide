<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ajoysarkar.careerguide.architectureTip">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/archmain"
                android:id="@+id/imageView25" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="আর্কিটেকচার"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="archinfo" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="কেন আর্কিটেকচার পড়তে এসেছো ?"
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="whyarch"
                android:nestedScrollingEnabled="false" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="এডমিশন"
                android:id="@+id/button8"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="admission" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="আর্কিটেকচার এর কয়েকটি শাখা "
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="archstep"
                android:nestedScrollingEnabled="false" />



        </LinearLayout>


    </ScrollView>
</RelativeLayout>

