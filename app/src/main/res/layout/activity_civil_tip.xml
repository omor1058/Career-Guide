<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ajoysarkar.careerguide.civilTip">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:srcCompat="@drawable/civilmain"
                android:id="@+id/imageView23" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="79dp"
                android:text="সিভিল ইঞ্জিনিয়ারিং "
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="civilinfo" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="প্রকৌশলীর কাজের ধরন"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="civilwork"
                android:nestedScrollingEnabled="false" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="কোথায় পড়বেন?"
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="wherestudy"
                android:nestedScrollingEnabled="false" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="সিভিল ইঞ্জিনিয়ারিং এর প্রধান শাখাগুলি"
                android:id="@+id/button8"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="civilstep" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="সিভিল ইঞ্জিনিয়ার হিসেবে ক্যারিয়ার"
                android:id="@+id/button9"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25dp"
                android:onClick="civilcareer" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/civilmain"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="367dp"
        android:layout_marginEnd="367dp"
        android:id="@+id/imageView19" />
</RelativeLayout>
